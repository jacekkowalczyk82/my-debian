double_buffer yes
use_spacer right
override_utf8_locale yes
use_xft yes
xftfont DejaVu Sans Mono:bold:size=9
xftalpha 1.0
update_interval 1
uppercase no
stippled_borders 0
border_inner_margin 0
border_width 0
default_outline_color black
default_shade_color black
draw_borders no
draw_graph_borders no
draw_outline no
draw_shades no
default_color DCDCDC
