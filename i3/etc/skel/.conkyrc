text_buffer_size 1028
no_buffers yes
short_units yes
pad_percents 2
top_name_width 10
alignment mr  # Aligned position on screen: tl, tr, tm, bl, br, bm, ml, mr
gap_x 35
gap_y 35
minimum_size 5 5
minimum_width 200

